#!/usr/bin/env node

var commander = require('commander');
var zpm = require("../");

commander.
  version(require('../package.json').version).
  usage('build').
  option('-v, --version', 'output the version number').
  option('build', 'build module.').
  parse(process.argv);

var cwd = process.cwd();

if (commander.build){
  zpm.build(cwd);
} else if (commander.build){
  zpm.zip(cwd);
} else {
  commander.help();
}


// vim:ft=javascript
